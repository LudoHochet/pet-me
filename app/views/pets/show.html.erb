<div class="container mt-5">
  <div class="card-pet">
      <nav>
        <svg class="arrow" version="1.1" viewBox="0 0 512 512" width="512px" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><polygon points="352,115.4 331.3,96 160,256 331.3,416 352,396.7 201.5,256 " stroke="#727272"/></svg>
        <%= link_to "Back", :back %>
      </nav>

    <div class="photo">
      <% if @pet.photos.attached? %>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= cl_image_tag @pet.photos.first.key, width: 250, height: 200 %>
          </div>
          <div class="carousel-item">
            <%= cl_image_tag @pet.photos.last.key, width: 250, height: 200 %>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <% else %>
        <%= image_tag "pet-1.png" %>
      <% end %>
    </div>

    <div class="description">
      <h2><%= @pet.name %></h2>
      <h4><%= @pet.species %></h4>
      <h1><%= @pet.price %> â‚¬</h1>
      <br>
      <p><%= @pet.description %></p>
      <p>This fabulous pet belongs to <%= link_to "#{@pet.user.first_name} ""#{@pet.user.last_name}", user_path(@pet.user) %></p>
      <br>
      <div class="bookings">
      <br>
        <% if @pet.bookings.blank? %>
          <h4> Be the first to leave a review for <%= @pet.name %> </h4>
        <% else %>
          <p> <%= @pet.name %> has already been booked <%= @pet.bookings.count %> times </p>
        <% end %>
        <p><%= link_to "Rent me", new_pet_booking_path(@pet), class: "btn btn-flat card" %></p>
      </div>
    </div>
  </div>
</div>

