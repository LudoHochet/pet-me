<div class="content">

  <div class="pet-show-background">
    <div class="pet-show pet-description">
      <h2><%= @pet.name %></h2>
      <dl>
        <dt>
          <%= @pet.species %>
        </dt>
        <dd>
          Pedigree <%= @pet.pedigree %>
        </dd>
        <dl>
          <dt>Who am I ?</dt>
          <dd>
            <%= @pet.description %>
          </dd>
        </dl>
      </div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" style="margin-left: 30px">

    <div class="carousel-item active">
      <%= cl_image_tag @pet.photos.first.key, width: 450, height: 300 %>
    </div>
    <div class="carousel-item">
      <%= cl_image_tag @pet.photos.last.key, width: 450, height: 300 %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


      <div class="pet-show pet-booking">

        <h2><%= @pet.name %>'s bookings</h2>
        <hr>
        <dl>
          <dt>
            I am booked...
          </dt>
          <% @pet.bookings.each do |booking| %>
          <dd>
            ...from <%= booking.start_date.day %>/<%= booking.start_date.month %>/<%= booking.start_date.year %>
            until <%= booking.end_date.day %>/<%= booking.end_date.month %>/<%= booking.end_date.year %>
          </dd>
          <% end %>
        </dl>
        <%= link_to "Please choose a date to meet me " %>
      </div>
    </div>
  </div>

