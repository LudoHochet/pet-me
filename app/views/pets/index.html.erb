<div class="container">
  <div class="home-title text-center my-4">
    <h3> Some of our fabulous <strong>pets</strong></h3>
  </div>
  <div class="row">

    <div class="col-md-8">
      <div class="container mx-auto">
        <div class="homewrapper-by-two">

          <% @pets.each do |pet| %>

          <div class="card-trip" style="width:300px">
            <% if pet.photos.attached? %>
            <%= cl_image_tag pet.photos.first.key %>
            <% else %>
            <%= image_tag "pet-1.png" %>
            <% end  %>
            <div class="card-trip-infos">
              <div>
                <h2><%= pet.name.capitalize %></h2>
              </div>
              <h2 class="card-trip-review"><%= link_to 'DÃ©tails', pet_path(pet)%></h2>
            </div>
          </div>

          <% end  %>
        </div>
      </div>
    </div>

    <div class="col-md-4">

      <div id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

    </div>

  </div>

</div>

