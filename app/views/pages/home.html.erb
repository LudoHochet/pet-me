
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.pexels.com/photos/3299901/pexels-photo-3299901.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);">
  <div class="banner-text">
    <div class="container relative">
      <div class="banner-title">
        <h1>Pet me !</h1>
        <p>
          <span id="banner-typed-text"></span>
        </p>
      </div>

      </div>
    <div class="container">
          <div class="my-5">
            <%= form_tag pets_path, method: :get do %>
            <div class="form-inline d-flex justify-content-center">
              <%= text_field_tag :query, params[:query],
              class: "form-control mb-4 mr-sm-4",
                placeholder: "Find by species" %>
                <%= text_field_tag :city, params[:city], class: "form-control mb-4 mr-sm-4",
                placeholder: "location" %>
                <%= submit_tag "Search", class: "btn btn-flat mb-4 mr-sm-6" %>
              </div>
              <% end %>
            </div>
          </div>
    </div>
  </div>

  <div class="container mx-auto">
  <div class="home-title text-center mt-4">
    <h3> Some of our fabulous <strong>pets</strong></h3>
  </div>
  <br>
    <div class="homewrapper">
      <% Pet.last(3).each do |pet| %>
      <div class="card-trip">
        <% if pet.photos.attached? %>
        <%= cl_image_tag pet.photos.first.key %>
        <% else %>
        <%= image_tag "pet-1.png" %>
        <% end  %>
        <div class="card-trip-infos">
          <div>
            <h2><%= pet.name.capitalize %></h2>
          </div>
          <h2 class="card-trip-review"><%= link_to 'DÃ©tails', pet_path(pet)%></h2>
        </div>
      </div>
      <% end  %>

    </div>
  </div>

